extends ../../layout

block content
  div(class='col-md-6')
    form(id='ship-in-pier-delete-form' name='ship-in-pier-delete-form' class='form-horizontal' method="POST" action='')
      input(id='id' type="hidden" name='id' value=shipInPier.id class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          strong #{shipInPier.name} #{shipInPier.code}?
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Delete