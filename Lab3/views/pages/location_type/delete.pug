extends ../../layout

block content
  div(class='col-md-6')
    form(id='location-type-delete-form' name='location-type-delete-form' class='form-horizontal' method="POST" action='')
      input(id='id' type="hidden" name='id' value=locationType.id class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          strong #{locationType.name} #{locationType.code}?
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Delete